<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">    <modelVersion>4.0.0</modelVersion>    <groupId>org.beginningee6.tutorial</groupId>    <artifactId>demos</artifactId>    <version>1.0</version>    <packaging>pom</packaging>    <name>JavaEE 6 HOL (to be completed)</name>    <description>Root pom.xml for all three exercises</description>    <modules>        <module>Exercise0</module>        <module>Exercise1-JSF</module>        <module>Exercise2-JAX-RS</module>        <module>Exercise3-CDI</module>        <module>Exercise4-Test</module>    </modules>    <properties>        <junit-version>4.10</junit-version>        <glassfish-version>3.1.2</glassfish-version>        <plugin-war-version>2.1.1</plugin-war-version>        <plugin-compiler-version>2.3.2</plugin-compiler-version>        <web-profile-version>6.0</web-profile-version>        <arquillian-version>1.0.0.Final</arquillian-version>        <arquillian_container_glassfish-version>1.0.0.CR3</arquillian_container_glassfish-version>        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>    </properties>    <dependencies>        <dependency>            <groupId>junit</groupId>            <artifactId>junit</artifactId>            <version>${junit-version}</version>            <scope>test</scope>        </dependency>    </dependencies>    <repositories>        <repository>            <id>maven2-repository.dev.java.net</id>            <name>Java.net Repository for Maven 2</name>            <url>http://download.java.net/maven/2</url>            <layout>default</layout>        </repository>        <repository>            <id>glassfish-maven-repository.dev.java.net</id>            <name>GlassFish Maven Repository</name>            <url>http://download.java.net/maven/glassfish</url>        </repository>    </repositories>    <pluginRepositories>        <pluginRepository>            <id>maven2-repository.dev.java.net</id>            <url>http://download.java.net/maven/2</url>        </pluginRepository>    </pluginRepositories>    <build>        <plugins>            <plugin>                <groupId>org.apache.maven.plugins</groupId>                <artifactId>maven-compiler-plugin</artifactId>                <version>${plugin-compiler-version}</version>                <inherited>true</inherited>                <configuration>                    <source>1.6</source>                    <target>1.6</target>                </configuration>            </plugin>        </plugins>    </build></project>